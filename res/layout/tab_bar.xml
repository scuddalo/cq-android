<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/transparent_panel" android:layout_width="fill_parent"
	android:background="@drawable/cq_tab_bar_bg"
	android:layout_centerHorizontal="true"
	android:layout_alignParentBottom="true" android:gravity="center"
	android:layout_height="90dp">
    <RelativeLayout 
    	android:layout_height="match_parent" 
    	android:layout_width="wrap_content" 
    	android:layout_gravity = "bottom|left"
    	android:id="@+id/messageIconContainer">
    	<TextView android:id="@+id/msgAlert"
    		android:text = "1"
    		android:height = "20dp"
    		android:background="@drawable/cq_msg_alert_bg" 
    		android:layout_width="30dp" 
    		android:layout_height="30dp" 
    		android:maxLines="1" 
    		android:paddingLeft="10dp" 
    		android:paddingTop="5dp" 
    		android:textColor="@drawable/white" 
    		android:textSize="12dp" 
    		android:textStyle="bold" 
    		android:layout_alignBottom="@+id/msgBtn" 
    		android:layout_marginBottom="50dp" 
    		android:layout_marginLeft="50dp" android:visibility="invisible"/>
    	<ImageButton android:background="@null" 
    			style="@style/TabbarOuterButton" 
    			android:src="@drawable/cq_inbox_btnx" 
    			android:id="@+id/msgBtn">
    	</ImageButton>
    </RelativeLayout>
	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_weight="1"
		android:gravity="center_horizontal">
		<ImageButton android:id="@+id/seekBtn" android:src="@drawable/cq_seek_btnx"
			android:background="@null" android:layout_gravity="bottom|center_horizontal"
			android:scaleType="center" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</ImageButton>
	</LinearLayout>
	<ImageButton android:id="@+id/addToTiersBtn" android:src="@drawable/cq_tiers_btnx"
		android:background="@null" style="@style/TabbarOuterButton" android:layout_gravity="top|right">
	</ImageButton>
</LinearLayout>
