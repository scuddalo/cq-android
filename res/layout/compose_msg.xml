<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
         android:layout_width="300px" 
         android:layout_height="250px"
         android:paddingLeft="8dp"
         android:paddingRight="8dp"
         android:background="@drawable/android_blue"
		 >
  
  
	<EditText 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:maxLines="15" 
		android:minLines="15"
		android:scrollHorizontally="false"
		android:gravity="top"
		android:textSize = "10px"
		android:inputType = "textMultiLine"
		android:id="@+id/ComposeMessageEditText" 
		android:textColor="@color/android_blue">
	</EditText>
	
	<RelativeLayout 
     		  android:id = "@+id/ComposeMessageButtonContainer"
     		  android:gravity = "bottom"  
     		  android:layout_width="wrap_content" 
     		  android:layout_height = "wrap_content" 
     		  android:layout_centerHorizontal = "true"
     		  android:layout_alignParentBottom = "true"
     		  >
     		  
     		 <Button android:id = "@+id/ComposeMessageCancelBtn"
     		  		android:layout_width = "wrap_content"
	     			android:layout_height = "wrap_content"
	     			android:text = "Cancel" android:padding="10dp"  
	     			android:background="@drawable/empty" 
	     			android:textColor="@drawable/android_yellow"
	     			android:typeface="sans" 
	     			android:textSize="12px"/>
	     			
	     	<Button android:id = "@+id/ComposeMessageSaveBtn"
     		  		android:layout_width = "wrap_content"
	     			android:layout_height = "wrap_content"
	     			android:layout_toRightOf = "@+id/ComposeMessageCancelBtn"
	     			android:text = "Save"  
	     			android:textSize="12px"
	     			android:padding="10dp"  
	     			android:background="@drawable/empty" 
	     			android:textColor="@drawable/android_yellow"
	     			android:typeface="sans" 
	     			/>
	</RelativeLayout>
	
</RelativeLayout>
