<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/mapPopupCompactModeContainer"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/cq_map_popup_expanded_bg"
	android:orientation="vertical" android:layout_width="250px" android:layout_height="70px">

	<LinearLayout android:paddingRight="10dp" android:id="@+id/mapPopupFirstRow"
		android:layout_alignParentTop="true" android:layout_width="fill_parent"
		android:layout_height="60px">
		<ImageView android:id="@+id/mapPopupPhoto" android:src="@drawable/cq_silhouette"
			android:layout_weight="0" android:layout_height="40px"
			android:scaleType="fitXY" android:layout_gravity="top"
			android:layout_width="35px" android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp" android:layout_marginTop="5dp">
		</ImageView>
		<TextView android:id="@+id/mapPopupCompactModeLocationDetailText"
			android:text="scott at starbucks, in redding ca"
			android:layout_height="wrap_content" android:layout_width="20px"
			android:layout_gravity="center_horizontal" android:ellipsize="end"
			android:layout_weight="1">
		</TextView>
		<ImageButton android:id="@+id/mapPopupCompactModeExpandButton"
			android:src="@drawable/cq_right_arrow_btnx" android:background="@null"
			android:scaleType="fitXY" android:layout_height="30px"
			android:layout_width="30px" android:layout_weight="0">
		</ImageButton>
	</LinearLayout>
</RelativeLayout>
